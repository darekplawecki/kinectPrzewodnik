                    <Image Source="../Content/Attractions/Photos/zoo1.jpg"/>
                    <TextBlock FontSize="30" Foreground="Black" TextWrapping="Wrap" MinWidth="100" MaxWidth="300" MinHeight="100"  TextAlignment="Center" Height="53">ZOO</TextBlock>
                </StackPanel>
            </k:KinectTileButton>

            <k:KinectTileButton Height="250" Width="300"  Name="OgródBotaniczny" Click="KinectTileButton_Click_1">
                <StackPanel>
                    <Image Source="../Content/Attractions/Photos/ogrodbotaniczny1.jpg"/>
                    <TextBlock FontSize="30" Foreground="Black" TextWrapping="Wrap" MinWidth="100" MaxWidth="300" MinHeight="100"  TextAlignment="Center" Height="53">Ogród Botaniczny</TextBlock>
