<Grid
    x:Class="Przewodnik.Views.AttractionArticle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Name="AttractionArticleGrid">


    <TextBlock  Name="titleTextBlock" Margin="50 50 50 150" FontSize="50"></TextBlock>
    <StackPanel Orientation="Horizontal" Margin="50 150 50 50">

        <StackPanel Orientation="Vertical">
            <Image Name="bigImageSource"  Width="450" Height="250" Stretch="UniformToFill" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <k:KinectTileButton  Width="150" Height="85" BorderThickness="0" Name="FirstImageButton" Click="KinectTileButton_Click">
                    <StackPanel>
                        <Image Name="firstImageSource" Width="150" Height="85" Stretch="UniformToFill" />
                    </StackPanel>
                </k:KinectTileButton>

                <k:KinectTileButton  Width="150" Height="85" BorderThickness="0" Name="SecondImageButton" Click="KinectTileButton_Click">
                    <StackPanel>
                        <Image Name="secondImageSource" Width="150" Height="85" Stretch="UniformToFill" />
                    </StackPanel>
                </k:KinectTileButton>

                <k:KinectTileButton  Width="150" Height="85" BorderThickness="0" Name="ThirdImageButton" Click="KinectTileButton_Click">
                    <StackPanel>
                        <Image Name="thirdImageSource" Width="150" Height="85" Stretch="UniformToFill" />
                    </StackPanel>
                </k:KinectTileButton>
            </StackPanel>

        </StackPanel>

        <k:KinectScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Height="335" >
            <TextBlock Margin="50,0,50,0" Name="descriptionTextBlock"  TextAlignment="Justify" VerticalAlignment="Top" TextWrapping="Wrap" MinWidth="100" MaxWidth="700" FontSize="25"></TextBlock>
        </k:KinectScrollViewer>

    </StackPanel>
</Grid>


    
