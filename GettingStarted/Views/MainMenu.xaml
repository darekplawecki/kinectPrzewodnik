<Grid
    x:Class="Przewodnik.Views.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Name="MainMenuGrid" Background="BurlyWood">
    <TextBlock x:Name="firstTextBlock" Margin="50 50 50 150" FontSize="50" FontWeight="Bold" FontFamily="Monotype Corsiva" Foreground="Chocolate">Przewodnik po Wrocławiu</TextBlock>
    <StackPanel Margin="20 150 20 20" Background="Beige">
        <k:KinectTileButton x:Name="touristAttractions" Height="200" Width="200" Background="SaddleBrown" 
                            Foreground="PeachPuff" Content="Atrakcje&#x0a;turystyczne" FontWeight="Bold" 
                            FontFamily="Monotype Corsiva" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"  
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="touristAttractions_Click"  >
        </k:KinectTileButton>
    </StackPanel>
</Grid>


    
