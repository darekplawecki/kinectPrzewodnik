<Window x:Class="GettingStarted.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="MainWindow" Height="900" Width="800">
    <Grid>
        <Grid>
            <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
            <k:KinectUserViewer Name="UserViewer" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
            k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" />
        </Grid>
        <k:KinectRegion Name="kinectRegion">
            <Grid Name="PageContentGrid" Margin="0, 100, 0, 0">
            <k:KinectTileButton Label="Wciśnij mnie!" HorizontalAlignment="Left" Click="StartAction"></k:KinectTileButton>
                <k:KinectCircleButton Label="Circle" HorizontalAlignment="Right" Height="200" Click="StartAction">Hi</k:KinectCircleButton>
            </Grid>

        </k:KinectRegion>
    </Grid>
</Window>
