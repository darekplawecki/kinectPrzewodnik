<Window x:Class="Przewodnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="Przewodnik turystyczny"
        WindowState="Maximized"
        MinWidth="1920"
        MinHeight="1080"
        WindowStyle="None">
    <Grid>
        <Grid>
            <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
            <k:KinectUserViewer Name="UserViewer" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
            k:KinectRegion.KinectRegion="{Binding ElementName=KinectRegion}" />
        </Grid>
        <k:KinectRegion 
            Name="KinectRegion"
            KinectSensor="{Binding KinectSensorChooser.Kinect}">
            
            <Grid Name="PageContentGrid" Margin="0, 100, 0, 0"></Grid>
            
        </k:KinectRegion>
    </Grid>
</Window>
